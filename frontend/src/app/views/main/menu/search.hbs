<div class="content-header">
  <span class="h3">Результаты поиска:</span>
  <hr>
</div>
<div class="content-scrollable">
  {{#if loading}}
  <div class="d-flex justify-content-center">
    <div class="spinner-border" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
  {{else}}
  {{#if list}}
  {{#each list}}
    {{#if countries}}
    <span class="h5">Страны:</span><br>
    {{#each countries}}
    <a class="clickable" data-country={{id}} href="#">{{name}}</a><br>
    {{/each}}
    <br>
    {{/if}}

    {{#if cities}}
    <span class="h5">Города:</span><br>
    {{#each cities}}
    <a class="clickable" data-city={{id}} href="#">{{name}}</a><br>
    {{/each}}
    {{/if}}
  {{/each}}
  {{else}}
  <strong>Ничего не найдено.</strong>
  {{/if}}
  {{/if}}
</div>
